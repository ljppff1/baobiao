<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/act_rl_common_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:background="@color/color_a" >

        <ImageView
            android:id="@+id/act_tv_common_address_return"
            android:layout_width="@dimen/DIMEN_45PX"
            android:layout_height="@dimen/DIMEN_45PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_34PX"
            android:adjustViewBounds="true"
            android:src="@drawable/web_view" />

        <TextView
            android:id="@+id/act_tv_common_address_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/act_tv_common_address_phone"
            android:layout_width="@dimen/DIMEN_40PX"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_phone" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_66PX"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/appoint_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示：也可以为朋友预约"
            android:textColor="@color/color_96"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
       android:id="@+id/act_rl__"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:background="@drawable/act_citys"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:paddingRight="@dimen/DIMEN_20PX"
        android:paddingTop="@dimen/DIMEN_10PX" >

        <ImageView
            android:id="@+id/act_iv_appoint_home"
            android:layout_width="@dimen/DIMEN_51PX"
            android:layout_height="@dimen/DIMEN_51PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:adjustViewBounds="true"
            android:src="@drawable/name2" />

        <TextView
            android:id="@+id/act_tv_appoint_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_home"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/act_tv_appoint_home1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/act_tv_appoint_home"
            android:layout_below="@+id/act_tv_appoint_home"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_rl_appoint_homes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/act_citys"
        android:paddingBottom="@dimen/DIMEN_20PX"
        android:paddingRight="@dimen/DIMEN_20PX"
        android:paddingTop="@dimen/DIMEN_20PX" >

        <ImageView
            android:id="@+id/act_iv_appoint_homes"
            android:layout_width="@dimen/DIMEN_51PX"
            android:layout_height="@dimen/DIMEN_51PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:adjustViewBounds="true"
            android:src="@drawable/city2" />

        <TextView
            android:id="@+id/act_tv_appoint_homes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_homes"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请输入地址"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_rl_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_130PX"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/act_citys" >

        <ImageView
            android:id="@+id/act_iv_appoint_homesw"
            android:layout_width="@dimen/DIMEN_51PX"
            android:layout_height="@dimen/DIMEN_51PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:adjustViewBounds="true"
            android:src="@drawable/city2" />

        <TextView
            android:id="@+id/act_tv_appoint_homesw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_homesw"
            android:text="请选择开始时间"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/act_tv_appoint_homesws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_tv_appoint_homesw"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_homesw"
            android:text="请选择结束时间"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/act_tv_appoint_homeswss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/act_tv_appoint_homesw"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_homesw"
            android:text="请选择开始时间"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_rl_appoint_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/act_citys"
        android:paddingBottom="@dimen/DIMEN_20PX"
        android:paddingRight="@dimen/DIMEN_20PX"
        android:paddingTop="@dimen/DIMEN_20PX" >

        <ImageView
            android:id="@+id/act_iv_appoint_homesss"
            android:layout_width="@dimen/DIMEN_51PX"
            android:layout_height="@dimen/DIMEN_51PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:adjustViewBounds="true"
            android:src="@drawable/message2" />

        <TextView
            android:id="@+id/act_tv_appoint_homesss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:layout_toRightOf="@+id/act_iv_appoint_homesss"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="捎一句"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:background="@drawable/act_citys"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="订单价格"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="@dimen/DIMEN_51PX"
                android:layout_height="@dimen/DIMEN_51PX"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:adjustViewBounds="true"
                android:src="@drawable/money2" />

            <TextView
                android:id="@+id/act_tv_appoint_htme_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cc" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="原价"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/act_tv_appoint_htme_moneyss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/DIMEN_10PX"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:text="抵扣卷"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/act_tv_appoint_htme_moneyzz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/DIMEN_10PX"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_10PX"
        android:text="订单价格已自动减除最近到期的优惠劵"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/act_rl_appoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/item_present_indent_click"
        android:paddingBottom="@dimen/DIMEN_10PX"
        android:paddingTop="@dimen/DIMEN_10PX" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textColor="@color/color_a"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>