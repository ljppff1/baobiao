<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_a"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fra_indexs_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:background="@color/indexs22" >

        <ImageView
            android:id="@+id/fra_iv_viewss"
            android:layout_width="@dimen/DIMEN_45PX"
            android:layout_height="@dimen/DIMEN_45PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_35PX"
            android:adjustViewBounds="true"
            android:src="@drawable/fanhui3" />

        <TextView
            android:id="@+id/fra_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约"
            android:textColor="@color/color_a"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/fra_tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:text="提交"
            android:textColor="@color/color_a"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/act_rl_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/DIMEN_25PX"
                android:paddingLeft="@dimen/DIMEN_39PX"
                android:paddingRight="@dimen/DIMEN_30PX"
                android:paddingTop="@dimen/DIMEN_25PX" >

                <ImageView
                    android:id="@+id/act_iv"
                    android:layout_width="@dimen/DIMEN_46PX"
                    android:layout_height="@dimen/DIMEN_46PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dizhi1" />

                <TextView
                    android:id="@+id/act_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/act_iv"
                    android:text="请填写预约地址"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/act_iv_s"
                    android:layout_width="@dimen/DIMEN_46PX"
                    android:layout_height="@dimen/DIMEN_46PX"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/s" />

                <TextView
                    android:id="@+id/act_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/act_iv_s"
                    android:text="123456789011"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/act_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_tv_name"
                    android:layout_marginTop="@dimen/DIMEN_20PX"
                    android:layout_toLeftOf="@+id/act_iv_s"
                    android:layout_toRightOf="@+id/act_iv"
                    android:text="aaa"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_20PX"
                android:background="@color/color_e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                android:layout_marginRight="@dimen/DIMEN_40PX"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/act_rl_appointss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="预约信息:"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <LinearLayout
                    android:id="@+id/act_rl_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/DIMEN_28PX"
                        android:src="@drawable/dian5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务类型"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/act_tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <LinearLayout
                    android:id="@+id/act_rl_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/DIMEN_28PX"
                        android:src="@drawable/dian5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务时长"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/act_tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <LinearLayout
                    android:id="@+id/act_rl_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/DIMEN_28PX"
                        android:src="@drawable/dian5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/act_tv_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <RelativeLayout
                    android:id="@+id/act_rl_special_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:id="@+id/act_iv_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/DIMEN_28PX"
                        android:src="@drawable/dian5" />

                    <TextView
                        android:id="@+id/act_tv_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/act_iv_"
                        android:text="特卫等级"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/act_iv_special_level"
                        android:layout_width="@dimen/DIMEN_38PX"
                        android:layout_height="@dimen/DIMEN_38PX"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/xunzhang3"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/act_iv_special_levels"
                        android:layout_width="@dimen/DIMEN_38PX"
                        android:layout_height="@dimen/DIMEN_38PX"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/act_iv_special_level"
                        android:adjustViewBounds="true"
                        android:src="@drawable/xunzhang3"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/act_iv_special_levelss"
                        android:layout_width="@dimen/DIMEN_38PX"
                        android:layout_height="@dimen/DIMEN_38PX"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/act_iv_special_levels"
                        android:adjustViewBounds="true"
                        android:src="@drawable/xunzhang3"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/act_iv_special_levelsss"
                        android:layout_width="@dimen/DIMEN_38PX"
                        android:layout_height="@dimen/DIMEN_38PX"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/act_iv_special_levelss"
                        android:adjustViewBounds="true"
                        android:src="@drawable/xunzhang3"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/act_iv_special_levelssss"
                        android:layout_width="@dimen/DIMEN_38PX"
                        android:layout_height="@dimen/DIMEN_38PX"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/act_iv_special_levelsss"
                        android:adjustViewBounds="true"
                        android:src="@drawable/xunzhang3"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <LinearLayout
                    android:id="@+id/act_rl_special_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/DIMEN_28PX"
                        android:src="@drawable/dian5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特卫人数"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/act_tv_special_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />

                <LinearLayout
                    android:id="@+id/act_rl_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIMEN_25PX"
                    android:paddingTop="@dimen/DIMEN_25PX" >

                    <ImageView
                        android:layout_width="@dimen/DIMEN_55PX"
                        android:layout_height="@dimen/DIMEN_50PX"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:src="@drawable/duanxin3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="捎一句："
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/act_tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="仅限140字以内"
                        android:textColor="@color/cc"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/cc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/DIMEN_40PX"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/DIMEN_30PX"
        android:paddingTop="@dimen/DIMEN_30PX" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特价:￥"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/ act_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/df"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/act_tv_discount_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(已优惠￥)"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>