<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_a"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_a"
        android:padding="@dimen/DIMEN_30PX" >

        <ImageView
            android:id="@+id/item_iv"
            android:layout_width="@dimen/DIMEN_50PX"
            android:layout_height="@dimen/DIMEN_50PX"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:adjustViewBounds="true"
            android:src="@drawable/text1" />

        <ImageView
            android:id="@+id/item_ivs"
            android:layout_width="@dimen/DIMEN_50PX"
            android:layout_height="@dimen/DIMEN_50PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/bianjiz" />

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_toLeftOf="@+id/item_ivs"
            android:layout_toRightOf="@+id/item_iv"
            android:text="刘德华"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/item_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_name"
            android:layout_toLeftOf="@+id/item_ivs"
            android:layout_toRightOf="@+id/item_iv"
            android:text="广东省深圳市南山区铜鼓路大冲城市花园3B栋17B    13800138000"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cc" />

</LinearLayout>