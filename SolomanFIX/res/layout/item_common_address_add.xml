<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_a"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/act_rl_common_address_tops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/DIMEN_30PX"
        android:paddingTop="@dimen/DIMEN_30PX" >

        <ImageView
            android:id="@+id/act_iv"
            android:layout_width="@dimen/DIMEN_46PX"
            android:layout_height="@dimen/DIMEN_46PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:adjustViewBounds="true"
            android:src="@drawable/dizhi1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/act_iv"
            android:text="请填写预约地址"
            android:textColor="@color/hong" />

        <ImageView
            android:layout_width="@dimen/DIMEN_40PX"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:adjustViewBounds="true"
            android:src="@drawable/skip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_20PX"
         android:background="@color/color_e7"/>

</LinearLayout>