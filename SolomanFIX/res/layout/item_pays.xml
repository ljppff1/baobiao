<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/color_a"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_25PX"
            android:paddingTop="@dimen/DIMEN_25PX" >

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="应付金额:200.0元"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_25PX"
            android:paddingTop="@dimen/DIMEN_25PX" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="请选择支付方式"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:id="@+id/item_rl_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_25PX"
            android:paddingLeft="@dimen/DIMEN_10PX"
            android:paddingRight="@dimen/DIMEN_10PX"
            android:paddingTop="@dimen/DIMEN_25PX" >

            <ImageView
                android:id="@+id/item_zfb"
                android:layout_width="@dimen/DIMEN_100PX"
                android:layout_height="@dimen/DIMEN_100PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:adjustViewBounds="true"
                android:src="@drawable/zfb" />

            <TextView
                android:id="@+id/item_zfbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_zfb"
                android:layout_marginTop="@dimen/DIMEN_5PX"
                android:layout_toRightOf="@+id/item_zfb"
                android:text="支付宝"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_zfbss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_zfb"
                android:layout_marginBottom="@dimen/DIMEN_5PX"
                android:layout_toRightOf="@+id/item_zfb"
                android:text="推荐支付宝用户使用"
                android:textColor="@color/c7"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@color/color_e7" />

        <RelativeLayout
              android:id="@+id/item_rl_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_25PX"
            android:paddingLeft="@dimen/DIMEN_10PX"
            android:paddingRight="@dimen/DIMEN_10PX"
            android:paddingTop="@dimen/DIMEN_25PX" >

            <ImageView
                android:id="@+id/item_wx"
                android:layout_width="@dimen/DIMEN_100PX"
                android:layout_height="@dimen/DIMEN_100PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginRight="@dimen/DIMEN_15PX"
                android:adjustViewBounds="true"
                android:src="@drawable/wx" />

            <TextView
                android:id="@+id/item_wxs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_wx"
                android:layout_marginTop="@dimen/DIMEN_5PX"
                android:layout_toRightOf="@+id/item_wx"
                android:text="微信"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_wxss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_wx"
                android:layout_marginBottom="@dimen/DIMEN_5PX"
                android:layout_toRightOf="@+id/item_wx"
                android:text="推荐微信用户使用"
                android:textColor="@color/c7"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:id="@+id/item_rl_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_25PX"
            android:paddingLeft="@dimen/DIMEN_10PX"
            android:paddingRight="@dimen/DIMEN_10PX"
            android:paddingTop="@dimen/DIMEN_25PX" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/DIMEN_5PX"
                android:text="取消"
                android:textColor="@color/c7"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>