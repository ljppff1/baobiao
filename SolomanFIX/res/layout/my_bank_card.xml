<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_a"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fra_indexs_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:background="@color/indexs22" >

        <ImageView
            android:id="@+id/act_iv_viewss"
            android:layout_width="@dimen/DIMEN_43PX"
            android:layout_height="@dimen/DIMEN_43PX"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_35PX"
            android:adjustViewBounds="true"
            android:src="@drawable/fanhui3" />

        <TextView
            android:id="@+id/act_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Soloman个人资料"
            android:textColor="@color/color_a"
            android:textSize="19sp" >
        </TextView>

        <TextView
            android:id="@+id/activity_selectimg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:text="审核"
            android:textColor="@color/color_a"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/act_rl_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/DIMEN_30PX"
            android:paddingLeft="@dimen/DIMEN_40PX"
            android:paddingTop="@dimen/DIMEN_30PX" >

            <TextView
                android:id="@+id/act_tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行名称： ss"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/act_v_bank"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/act_rl_bank"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:id="@+id/act_rl_bank_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_v_bank"
            android:paddingBottom="@dimen/DIMEN_30PX"
            android:paddingLeft="@dimen/DIMEN_40PX"
            android:paddingTop="@dimen/DIMEN_30PX" >

            <TextView
                android:id="@+id/act_tv_bank_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支行网点名称： ss"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/act_v_bank_s"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/act_rl_bank_s"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:background="@color/color_e7" />

        <RelativeLayout
            android:id="@+id/act_rl_bank_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_v_bank_s"
            android:paddingBottom="@dimen/DIMEN_30PX"
            android:paddingLeft="@dimen/DIMEN_40PX"
            android:paddingTop="@dimen/DIMEN_30PX" >

            <TextView
                android:id="@+id/act_tv_bank_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号： ss"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/act_v_bank_ss"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/act_rl_bank_ss"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:background="@color/color_e7" />

        <View
            android:id="@+id/act_v_bank_sss"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_20PX"
            android:layout_below="@+id/act_v_bank_ss"
            android:background="@color/ef" />

        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:layout_below="@+id/act_v_bank_sss"
            android:layout_marginLeft="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </RelativeLayout>

</LinearLayout>